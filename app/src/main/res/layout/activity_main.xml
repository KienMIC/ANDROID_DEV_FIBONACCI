<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tV_NhapSoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập số A" />

    <EditText
        android:id="@+id/eT_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tV_NhapSoB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập số B" />

    <EditText
        android:id="@+id/eT_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tV_NhapSoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập số C" />

    <EditText
        android:id="@+id/eT_C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KIỂM TRA FIBONACCI" />

    <TextView
        android:id="@+id/tV_KetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CODING BY NTK - VIMARU" />
</LinearLayout>